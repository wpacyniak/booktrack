<!DOCTYPE html>
<html>
    <head>
        <title>Plan czytelniczy</title>
        <%- include ('resources/head.html') %>
    </head>

    <body>
        <%- include ('resources/header.ejs') %>
        <div class="container"> 
            <div class="row">
                <div class="col-xs-12 col-lg-9 col-xl-10 mx-auto" id="main_col">
                    <h2 class="text-center"> Dodawanie planu czytelniczego: </h2>
                    <div class="col-xs-8 col-lg-7 col-xl-8 mx-auto">
                        <form action="/insert_plan" method="post">
                            <div class="form-group">
                            <label for="titleBook">Tytuł:</label>
                            <input type="text" class="form-control" name="titleBook" id="titleBook" placeholder="Tytuł">
                            </div>
                            <div class="form-group">
                            <label for="authorBook">Autor:</label>
                            <input type="text" class="form-control" name="authorBook" id="authorBook" placeholder="Autor">
                            </div>
                            <div class="form-group">
                                <label for="pagesBook">Liczba stron:</label>
                                <input type="number" name="pagesBook" class="form-control" id="pagesBook" placeholder="Liczba stron">
                            </div>
                            <div class="form-group mb-3">
                                <label for="coverBook">Okładka:</label>
                                <input type="text" class="form-control" name="coverBook" id="coverBook" placeholder="Wstaw link!">
                            </div>
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="btn btn-light">Dodaj</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%- include ('resources/scripts.html') %>    
    </body>

</html>